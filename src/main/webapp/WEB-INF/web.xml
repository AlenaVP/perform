<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Perform</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>by.minsk.perform.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>performerServlet</servlet-name>
        <servlet-class>by.minsk.perform.web.PerformerServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>performerServlet</servlet-name>
        <url-pattern>/performers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>albumServlet</servlet-name>
        <servlet-class>by.minsk.perform.web.AlbumServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>albumServlet</servlet-name>
        <url-pattern>/albums</url-pattern>
    </servlet-mapping>

</web-app>